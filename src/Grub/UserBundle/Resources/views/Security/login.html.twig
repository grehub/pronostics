{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

<h1>Connexion</h1>

{% if error %}
<div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form class="well" action="{{ path("fos_user_security_check") }}" method="post">
  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

  <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
  <input type="text" id="username" name="_username" value="{{ last_username }}"/>

  <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
  <input type="password" id="password" name="_password"/>

  <label class="checkbox" for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me"
                                                   value="on"/>{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
  </label>

  <input class="btn" type="submit" id="_submit" name="_submit"
         value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
<a href="{{path('fos_user_registration_register')}}" title="Créer un compte">Créer un compte</a>
</form>
{% endblock fos_user_content %}
